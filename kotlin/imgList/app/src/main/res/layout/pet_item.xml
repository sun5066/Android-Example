<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/pet_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pet_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="김민석"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/pet_item_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pet_item_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pet_item_img"
        app:layout_constraintTop_toBottomOf="@+id/pet_item_name" />

    <TextView
        android:id="@+id/pet_item_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Male"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pet_item_age"
        app:layout_constraintTop_toBottomOf="@+id/pet_item_name" />

</androidx.constraintlayout.widget.ConstraintLayout>