<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_service_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="serviceStart"
        android:text="@string/btn_service_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_service_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="serviceStop"
        android:text="@string/btn_service_stop"
        app:layout_constraintTop_toBottomOf="@+id/btn_service_start" />

    <Button
        android:id="@+id/btn_service_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="serviceBind"
        android:text="@string/btn_service_bind"
        app:layout_constraintTop_toBottomOf="@+id/btn_service_stop" />

    <Button
        android:id="@+id/btn_service_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="serviceUnbind"
        android:text="@string/btn_service_unbind"
        app:layout_constraintTop_toBottomOf="@+id/btn_service_bind" />

    <Button
        android:id="@+id/btn_service_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="callServiceFunction"
        android:text="@string/btn_service_call"
        app:layout_constraintTop_toBottomOf="@+id/btn_service_unbind" />

</androidx.constraintlayout.widget.ConstraintLayout>